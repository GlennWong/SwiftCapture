{
  "name": "SwiftCapture",
  "version": "2.2.0",
  "description": "Professional screen recording tool for macOS with comprehensive CLI interface",
  "homepage": "https://github.com/GlennWong/SwiftCapture",
  "license": "MIT",
  "author": "Your Name",
  "repository": {
    "type": "git",
    "url": "https://github.com/GlennWong/SwiftCapture.git"
  },
  "system_requirements": {
    "macos_minimum": "12.3",
    "xcode_minimum": "14.3",
    "swift_minimum": "5.6",
    "frameworks": [
      "ScreenCaptureKit",
      "AVFoundation",
      "CoreMedia",
      "AppKit"
    ]
  },
  "build": {
    "configuration": "release",
    "architectures": [
      "arm64",
      "x86_64"
    ],
    "optimization": "speed",
    "strip_symbols": true,
    "binary_name": "scap",
    "output_formats": [
      "binary",
      "archive"
    ]
  },
  "homebrew": {
    "formula_name": "swiftcapture",
    "tap_name": "GlennWong/swiftcapture",
    "dependencies": {
      "build": [
        "xcode"
      ],
      "runtime": []
    },
    "test_commands": [
      "--version",
      "--help",
      "--screen-list",
      "--app-list",
      "--list-presets"
    ]
  },
  "distribution": {
    "platforms": [
      "macos"
    ],
    "channels": [
      "homebrew",
      "github_releases",
      "manual"
    ],
    "archive_formats": [
      "tar.gz",
      "zip"
    ],
    "checksums": [
      "sha256",
      "sha512"
    ]
  },
  "permissions": {
    "required": [
      "screen_recording"
    ],
    "optional": [
      "microphone"
    ]
  },
  "features": [
    "Multi-screen support",
    "Application window recording",
    "Audio recording with microphone",
    "Flexible area selection",
    "Quality controls (fps, bitrate)",
    "High-quality MOV output format",
    "Preset management",
    "Countdown timer",
    "Cursor visibility control",
    "Comprehensive CLI interface"
  ]
}
